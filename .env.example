# LLM Configuration
# Backend types: "openai", "vllm", "api", "huggingface", "gemma", "local"
LLM_BACKEND_TYPE=openai
LLM_MODEL_NAME=gpt-3.5-turbo
LLM_DEVICE=cpu

# API Configuration (for OpenAI-compatible backends)
API_KEY=your_api_key_here
BASE_URL=https://api.openai.com/v1

# For local vLLM server, use:
# LLM_BACKEND_TYPE=vllm
# BASE_URL=http://localhost:8000/v1
# API_KEY=dummy_key

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASS=password

# Embedding Configuration
EMBEDDING_BACKEND_TYPE=openai
EMBEDDING_MODEL_NAME=text-embedding-ada-002

# Vector Store Configuration
CHROMA_COLLECTION_NAME=traffic_violations
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Similarity Threshold
MIN_SIMILARITY_THRESHOLD=0.7
